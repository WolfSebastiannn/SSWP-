#include <stdio.h>

void erzeugerArray(int*, int);
void zeigeArrayInConsole(int*, int);
void dreiecksTausch (int*, int);
void bubbleSort (int*, int);


int main()
{
    int anz = 10;
    int z[anz];
    
    erzeugerArray(z, anz);
    printf("\nDas Array %d mit zuf√§lligen Zahlen: \n", anz);
    //bubbleSort (z, anz)
    zeigeArrayInConsole(z, anz);
    printf("\nZeige %d in geordneter Reihenfolge: \n", anz);
    zeigeArrayInConsole(z, anz);
    return 0;
}

void erzeugerArray (int * array , int anz) {
    
    for (int i = 0; i < anz; i++) {
        array [i] = rand() % 100;
    }
    
    return 0;
}


void zeigeArrayInConsole(int * array, int anz) {
    for (int i = 0; i < anz; i++) 
        printf("%d ", array[i]);
    return 0;
}
